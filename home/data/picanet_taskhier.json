{"mortality": {
			"metricName": "Mortality",
			"task": "What is the raw  admission and death count per month?",
			"variables":["admonth", "count", "unitDisStatus"],
			"vtypes":["t", "q", "n"],			
			"granP": "unit",
			"granT": "monthly",
			"target":["trend", "distribution", "value"],
			"vroles":["in", "out", "out"],
	     	"children": [{"task": "Does the local mortality fall in the Danger zone?",
	     					"linkToParent": "extends", 
	     				  "variables":["smrlocal", "smrglobalmin", "smrglobalmax"],
							"vtypes":["q", "q", "q"],
							"granP": "national",
							"granT": "monthly",
							"target":["value", "value", "value"]}, 
	     			{"task": "How does mortality at a specific month compare to the same month annually over the last 3 years?",
	     					"linkToParent": "extends", 
	     				  "variables":["year"],
							"vtypes":["n"],
							"granP": "unit",
							"granT": "monthly",
							"target":["distribution"]}, 
					{"task": "What is the specialty case mix for a month with high mortality? ",
	     					"linkToParent": "extends", 
	     				  "variables":["primarydiagnosisgroup"],
	     				  "filter": ["admonth"], 
							"vtypes":["n"],
							"granP": "unit",
							"granT": "snap",
							"target":["proportion"]}, 
	     			{"task": "How does the unit compare to similar units in terms of SMR?",
	     					"linkToParent": "alters", 
	     				  "variables":["siteidscr"],
							"vtypes":["n"],
							"granP": "unit",
							"granT": "monthly",
							"target":["distribution"]}
	     				]},
